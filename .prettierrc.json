{
  "semi": true,
  "trailingComma": "all",
  "proseWrap": "always",
  "singleQuote": true,
  "printWidth": 120,
  "tabWidth": 2,
  "overrides": [
    {
      "files": "**/*.astro",
      "options": { "parser": "astro" }
    }
  ],
  "plugins": ["prettier-plugin-astro", "prettier-plugin-tailwindcss"]
}
