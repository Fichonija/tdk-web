---
import type { IconType } from '../../assets/icons';
import type * as CSS from 'csstype';
import { sizesMap } from './sizes';

interface Props {
  icon: IconType;
  color?: CSS.Property.Color;
  size?: keyof typeof sizesMap;
}

const { default: innerHTML } = await import(`../../assets/icons/${Astro.props.icon}.svg?raw`);

const { color = 'current', size = 'm' } = Astro.props;
---

<div class={`text-${color} w-${sizesMap[size]}`}>
  <Fragment set:html={innerHTML} />
</div>
