---
import '~/ui/styles/base.css';
import { Header } from '../Header';
import Footer from '../Footer.astro';
import Seo from './Seo.astro';
import Toast from '~/ui/components/Toast/Toast.astro';
import { isDev, localOrigin, productionOrigin } from '~/utils/env';

export interface Props {
  title: string;
  description: string;
}
const props = Astro.props;

const homePath = isDev ? localOrigin : productionOrigin;
---

<!doctype html>
<html lang="hr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="apple-touch-icon" sizes="180x180" href={`${homePath}/favicon/apple-touch-icon.png`} />
    <link rel="icon" type="image/png" sizes="32x32" href={`${homePath}/favicon/favicon-32x32.png`} />
    <link rel="icon" type="image/png" sizes="16x16" href={`${homePath}/favicon/favicon-16x16.png`} />
    <link rel="manifest" href={`${homePath}/favicon/site.webmanifest`} />
    <link rel="mask-icon" href={`${homePath}/favicon/safari-pinned-tab.svg" color="#16a34a`} />
    <meta name="apple-mobile-web-app-title" content="TDK" />
    <meta name="application-name" content="TDK" />
    <meta name="msapplication-TileColor" content="#da532c" />
    <meta name="theme-color" content="#ffffff" />
    <meta name="generator" content={Astro.generator} />
    <link rel="sitemap" href={`${homePath}/sitemap-index.xml`} />
    <Seo {...props} />
  </head>
  <body>
    <Header />
    <main><slot /></main>
    <Footer />
    <Toast />
  </body>
</html>
