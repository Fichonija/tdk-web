---
import { Image } from 'astro:assets';
import ContactImg from './assets/workshop.jpg';
import ContactForm from './ContactForm';
import ContactLinks from './ContactLinks';
---

<section id="contact" class="pb-16 lex flex-col gap-8 bg-[#F2EEE8]">
  <ContactLinks />
  <section class="max-w-wrapper w-full flex justify-center bg-[#CFCBBF]">
    <div class="w-3/5 flex flex-col gap-4 md:gap-6 p-6 md:p-10 flex-1">
      <h3 class="font-sansation font-light text-xl lg:text-2xl text-gray-900">Po≈°alji poruku</h3>
      <ContactForm client:load />
    </div>
    <Image
      src={ContactImg}
      quality="low"
      widths={[600, 1200]}
      sizes="(min-width: 1500px) 600w, 40vw"
      alt="Krupni kadar radionice sa stolarskim alatima"
      class="hidden md:block w-2/5 max-w-[600px] object-cover"
    />
  </section>
</section>
