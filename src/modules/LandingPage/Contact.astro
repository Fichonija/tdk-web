<div class="contact-section">
  <div class="wrapper">
    <h2 class="heading">Kontaktirajte nas</h2>
    <form id="contact-form" action="/.netlify/functions/sendContactEmail">
      <div class="contact-field">
        <label class="label" for="name">Ime</label>
        <input type="text" name="name" id="name" required />
      </div>
      <div class="contact-field">
        <label class="label" for="email">E-mail</label>
        <input type="email" name="email" id="email" required />
      </div>
      <div class="contact-field">
        <label class="label" for="message">Upit</label>
        <textarea name="message" id="message" cols="30" rows="10" required></textarea>
      </div>
      <button type="submit" name="submit">
        <span class="label">POŠALJI</span>
      </button>
    </form>
  </div>
</div>

<style>
  .contact-section {
    padding: 64px 32px;
  }

  .wrapper {
    max-width: 550px;
    margin-inline: auto;
    display: flex;
    flex-direction: column;
    gap: 24px;
  }

  .heading {
    font-family: 'Montserrat Semibold';
    font-size: var(--xl-font-size);
    line-height: var(--xl-line-height);
  }

  .label {
    font-family: 'Montserrat Medium';
    font-size: var(--m-font-size);
    line-height: var(--m-line-height);
  }

  #contact-form {
    display: flex;
    flex-direction: column;
    gap: 18px;
  }

  .contact-field {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 8px;
  }

  .contact-field input,
  .contact-field textarea {
    width: 100%;
    border-width: 1px;
    border-style: solid;
    border-color: hsl(0deg 0% 27.15%);
    border-radius: 6px;
    padding: 4px 8px;
  }

  button {
    cursor: pointer;
    width: fit-content;
    padding: 16px 24px;
    border-radius: 8px;
    border: 2px solid #9aa583;
    background: #c5d89c;
  }

  button:disabled {
    cursor: not-allowed;
  }

  @media all and (max-width: 360px) {
    .contact-section {
      padding: 32px 16px;
    }

    .heading {
      font-size: var(--l-font-size);
      line-height: var(--l-line-height);
    }

    .label {
      font-size: var(--r-font-size);
      line-height: var(--r-line-height);
    }

    .wrapper {
      gap: 18px;
    }

    #contact-form {
      gap: 16px;
    }

    button {
      padding: 8px 16px;
      width: 100%;
      border-radius: 8px;
    }
  }
</style>

<script>
  const form = document.getElementById('contact-form') as HTMLFormElement;

  form.addEventListener('submit', async (e) => {
    e.preventDefault();

    setButtonSendingState();

    const name = (form.elements.namedItem('name') as HTMLInputElement).value;
    const email = (form.elements.namedItem('email') as HTMLInputElement).value;
    const message = (form.elements.namedItem('message') as HTMLInputElement).value;

    let fetchUrl = form.action;
    let fetchOptions = {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
      },
      body: JSON.stringify({ name, email, message }),
    };

    let response = await fetch(fetchUrl, fetchOptions);
    let responseStatus = response.status;

    if (responseStatus !== 200) {
      let responseBody = await response.json();
      alert("Došlo je do pogreške prilikom slanja podataka: '" + responseBody + "'");
    }

    setButtonInitialState();
  });

  function setButtonSendingState() {
    const buttonEl = form.elements.namedItem('submit') as HTMLButtonElement;
    buttonEl.disabled = true;
    buttonEl.style.backgroundColor = '#afafaf';

    const textEl = buttonEl.firstElementChild as HTMLSpanElement;
    textEl.innerText = 'SLANJE...';
  }

  function setButtonInitialState() {
    const buttonEl = form.elements.namedItem('submit') as HTMLButtonElement;
    buttonEl.disabled = false;
    buttonEl.style.backgroundColor = '#c5d89c';

    const textEl = buttonEl.firstElementChild as HTMLSpanElement;
    textEl.innerText = 'POŠALJI';
  }
</script>
