---
import Logo from '~/ui/components/Logo.astro';
---

<div class="hero">
  <div class="content">
    <div class="logo"><Logo /></div>
    <h1 class="heading">Tvornica Drvenih Konstrukcija</h1>
    <div class="contact">
      <a class="link" href="mailto:tvornicadrvenihkonstrukcija@gmail.com"> tvornicadrvenihkonstrukcija@gmail.com</a>
      <a class="link" href="tel:0959236708">+385 95 9236 708</a>
    </div>
  </div>
  <div class="overlay"></div>
</div>

<style>
  .heading {
    /* text-xxxl-semibold */
    font-family: 'Montserrat Semibold';
    font-size: var(--xxxl-font-size);
    line-height: var(--xxxl-line-height);
  }

  .link {
    /* text-l-medium */
    font-family: 'Montserrat Medium';
    font-size: var(--l-font-size);
    line-height: var(--l-line-height);
  }

  .logo {
    width: 128px;
  }

  .hero {
    height: 100vh;
    position: relative;
    background-image: url(/hero.webp);
    background-repeat: no-repeat;
    background-size: cover;
    background-position: center center;
    display: flex;
    justify-content: center;
    padding-inline: 64px;
  }

  .content {
    z-index: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 16px;
    text-align: center;
    color: white;
  }

  .overlay {
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.3);
    position: absolute;
    top: 0;
    left: 0;
  }

  .contact {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 12px;
  }

  a {
    color: white;
    text-decoration: none;
  }

  @media all and (max-width: 768px) {
    .heading {
      font-size: var(--xxl-font-size);
      line-height: var(--xxl-line-height);
    }

    .link {
      font-size: var(--m-font-size);
      line-height: var(--m-line-height);
    }

    .hero {
      padding-inline: 16px;
    }
  }

  @media all and (max-width: 500px) {
    .heading {
      font-size: var(--xl-font-size);
      line-height: var(--xl-line-height);
    }

    .link {
      font-size: var(--r-font-size);
      line-height: var(--r-line-height);
    }

    .logo {
      width: 96px;
    }

    .hero {
      padding-inline: 8px;
    }
  }
</style>
