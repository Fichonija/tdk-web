---
import { Icon } from '~/ui/components';
import type { IconType } from '~/ui/assets/icons';

interface Props {
  text: string;
  icon: IconType;
}

const { text, icon } = Astro.props;
---

<div class="mx-auto flex flex-col items-center gap-2">
  <Icon icon={icon} className="w-[36px] h-[36px] md:w-[44px] md:h-[44px] lg:w-[54px] lg:h-[54px] text-white" />
  <h2 class="font-sansation font-light text-2xl lg:text-3xl text-gray-900">{text}</h2>
</div>
