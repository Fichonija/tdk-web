---
import SectionHeader from './SectionHeader.astro';
import { ProductCardsDisplay } from './ProductCardsDisplay';
import SawnTimberImg from '~/ui/assets/images/materials/sawn-timber.png';
import LaminatedTimberImg from '~/ui/assets/images/materials/laminated-timber.jpeg';
import KvhTimberImg from '~/ui/assets/images/materials/kvh-timber.jpeg';
import { ProductItemType } from './ProductCardsDisplay/types.ts';
---

<div class="py-8 px-16 flex flex-col items-center gap-8 bg-[#F2EEE8]" style={{ '--product-section-color': '#BB8056' }}>
  <SectionHeader icon="material" text="Građa" />
  <ProductCardsDisplay
    client:load
    summary="This is a short summary about materials"
    items={[
      {
        title: 'Rezana',
        text: [
          'suhe grede izrađene od trupaca, prirodnog izgleda, pouzdan su i kvalitetan izbor za nosivu konstrukciju.',
        ],
        image: { meta: SawnTimberImg, alt: 'Rezana građa' },
        containerHeight: 'h-[510px]',
        type: ProductItemType.BASE,
      },
      {
        title: 'Lamelirana',
        text: [
          'suhe grede izrađene od slijepljenih strojno sortiranih lamela.',
          'iznimno visoke dimenzijske stabilnosti, niske razine nastajanja pukotina, više nosivosti te otpornosti na vatru.',
          'ističu se vizualnim dojmom ujednačenosti te modernim i prirodnim izgledom.',
        ],
        image: { meta: LaminatedTimberImg, alt: 'Lamelirana građa' },
        containerHeight: 'h-[599px]',
        type: ProductItemType.BASE,
      },
      {
        title: 'KVH',
        text: [
          'suhe grede izrađene od strojno sortiranih komada punog drva, zupčastim spojevima međusobno spojenih i lijepljenih pod pritiskom.',
          'visoke dimenzijske stabilnosti, smanjene razine nastajanja pukotina i savijanja te manjeg broja čvorova.',
          'ističu se prirodnim i modernim izgledom.',
        ],
        image: { meta: KvhTimberImg, alt: 'KVH građa' },
        containerHeight: 'h-[610px]',
        type: ProductItemType.BASE,
      },
    ]}
  />
</div>
