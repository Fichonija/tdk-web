---
import Layout from '~/shared/Layout';
import { ContactSection, MissionStatement } from '~/shared/components';
import { CoverSection, Gallery, Hero, MaterialSection } from './components';
---

<Layout
  title="Nadstrešnice, pergole i sjenice"
  description="Naš tim bavi se dizajniranjem i izradom svih vrsta drvenih konstrukcija, od pergola, sjenica i nadstrešnica, do kućica na stablu, namijenjenih za male i za velike ljubitelje avanture. U izradi koristimo visokokvalitetne materijale, suvremena pokrovna rješenja i promišljeni dizajn za dugotrajnost i sklad koji traju generacijama. Odaberite naše drvene konstrukcije te dajte dodatnu vrijednost vašem prostoru."
>
  <Hero />
  <MissionStatement
    text="Visokokvalitetni materijali, suvremena pokrovna rješenja i promišljeni dizajn za dugotrajnost i sklad koji traju generacijama"
  />
  <MaterialSection />
  <MissionStatement text="Uživajte u ugodnim trenucima na otvorenome zaštićeni od svih vremenskih neprilika" />
  <CoverSection />
  <div class="bg-[#F2F2F2]">
    <MissionStatement
      text="Uljepšajte svoj vrt ili terasu prirodnom toplinom i jedinstvenim šarmom sa drvenim konstrukcijama"
    />
  </div>
  <Gallery />
  <ContactSection />
</Layout>
