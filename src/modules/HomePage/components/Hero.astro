---
import { Icon } from '~/ui/components';
import { Image } from 'astro:assets';
import HeroImg from '~/ui/assets/images/hero.jpg';
---

<div class="bg-[#BB8056]/[.12]">
  <div class="relative mx-auto max-w-[2048px] h-[50svh] md:h-[75svh] max-h-[768px]">
    <Image
      loading="eager"
      quality="mid"
      src={HeroImg}
      alt=""
      class="absolute top-0 left-0 w-full h-full object-cover"
    />
    <div class="absolute top-0 left-0 w-full h-full bg-[#BB8056]/[.12]"></div>
    <div class="relative w-full h-full px-4 flex">
      <Icon className="m-auto w-1/2 min-w-[256px] max-w-[400px] text-white" icon="logoText" />
    </div>
  </div>
</div>
