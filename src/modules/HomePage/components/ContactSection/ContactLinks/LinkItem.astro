---
import type { IconType } from '~/ui/assets/icons';
import { Icon } from '~/ui/components';

interface Props {
  href: string;
  hrefType: 'mail' | 'tel';
  icon: IconType;
}
const { href, hrefType, icon } = Astro.props;

const isEmail = hrefType === 'mail';
const fullHref = `${isEmail ? 'mailto' : 'tel'}:${href}`;
---

<a href={fullHref}>
  <div class="flex items-center gap-3 md:gap-4">
    <Icon icon={icon} className="w-[44px] h-[44px] md:w-[56px] md:h-[56px] p-2 rounded-full bg-[#4B7254] text-white" />
    <div class="flex flex-col font-sansation lg:text-xl text-gray-800 whitespace-nowrap">
      <p class="font-bold">{isEmail ? 'Email' : 'Telefon'}:</p>
      <p>{href}</p>
    </div>
  </div>
</a>
